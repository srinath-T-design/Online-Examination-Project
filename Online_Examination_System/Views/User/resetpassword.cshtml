@model Bussiness_Object_Layer.Model.User

@{
    ViewBag.Title = "resetpassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Colan Quiz</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link href="~/Content/project.css" rel="stylesheet" />
</head>
<body>
    <div class="login">
        <div class="account-login">
           
            <h4 style="color:black;">RESET PASSWORD</h4>

            @using (Html.BeginForm())
            {
                <form action="" class="login-form">
                    <div class="form-group">
                        @*<input type="text" placeholder="User Name" class="form-control">*@
                        @*<label>Password</label>*@
                        @Html.TextBoxFor(x => x.password, new { placeholder = " enter the Password", @class = "form-control",id="form1"})
                        @*<p style="display:none;color:red" id="text1">Enter the password</p>*@
                        @Html.ValidationMessageFor(x=>x.password)
                    </div>
                    <div class="form-group">
                        @*<input type="password" placeholder="Password" class="form-control">*@
                        @*<label>Confirm password</label>*@
                        @Html.PasswordFor(x => x.password, new { placeholder = "enter the Confirm-Password", @class = "form-control",id="form2" })
                        @*<p style="display:none;color:red" id="text2">Enter the confirm-password</p>*@
                        @Html.ValidationMessageFor(x=>x.password)
                    </div>

                    <button  id="btn" class="btn" value="resetpassword">Submit</button>

                    <p>Are you new?<a href="/User/Getotp/">Back</a></p>
                </form>
            }
        </div>
    </div>

   
    
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script>
        $("#btn").click(function () {
            var text1 = $("#form1").val();
            var text2 = $("#form2").val();

            if (text1 == "" && text2 == "") {
                $("#text1").css("display", "block")
                $("#text2").css("display", "block")

            }
            if (text1 != "") {

                $("#text1").css("display", "none")

            }
            else (text2 != "") {
                $("#text2").css("display", "none")
            }

        });

    </script>
  
    



</body>
</html>